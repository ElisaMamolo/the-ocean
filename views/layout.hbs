<body>
   <nav class="navbar navbar-lgt bg-light justify-content-between fixed-top">
      <ul class="nav justify-content-start">
         <li>
            <a class="navbar-brand" href="/" class="pl-5">
               <img src="/images/TheOcean-removebg-preview.png" class="navlogo" alt="the ocean logo">
            </a>
         </li>
      </ul>
      <ul class="nav justify-content-end">
         {{#if session.user}}

         {{#if session.user.isAdmin}}
         <li class="nav-item">
            <a class="nav-link" href="/nft/create">Create NFT</a>
         </li>
         {{/if}}
         <li class="nav-item">
            <a class="nav-link" href="/auth/details">Profile: {{session.user.username}} </a>
         </li>
         <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
         </li>
         {{else}}
         <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
         </li>
